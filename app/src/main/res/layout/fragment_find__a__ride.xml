<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="com.example.bunty.sharetheride.Fragments.Find_A_Ride">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WHERE DO YOU WANT TO GO?"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="STARTING FROM"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <com.example.bunty.sharetheride.CustomAutoCompleteTextView
        android:id="@+id/Fsource"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Source"
        />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="25dp"
        android:layout_height="25dp"

        android:background="#fff"
        android:id="@+id/FsourceX"
        android:src="@drawable/x"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/Fsource"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GOING TO"
 />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.example.bunty.sharetheride.CustomAutoCompleteTextView
            android:id="@+id/Fdestination"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Destination"
            />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:background="#fff"
            android:id="@+id/FdestinationX"
            android:src="@drawable/x"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/Fdestination"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DATE"
         />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:paddingTop="10dp"
        android:editable="false"
        android:id="@+id/Fdate" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_edittext"
        android:text="SEARCH FOR RIDES"
        android:id="@+id/Fsearch" />


</LinearLayout>
