<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:id="@+id/findARide"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="com.example.bunty.sharetheride.Fragments.Find_A_Ride"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="WHERE DO YOU WANT TO GO?"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="STARTING FROM"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.example.bunty.sharetheride.AutoComplete.CustomAutoCompleteTextView
        android:id="@+id/Fsource"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:hint="Source"
        />

    <ImageButton

        android:layout_width="35dp"
        android:layout_height="35dp"

        android:background="#fff"
        android:id="@+id/FsourceX"
        android:src="@drawable/x"
        android:layout_alignTop="@+id/Fsource"
        android:layout_alignRight="@+id/Fsource"
        android:layout_alignEnd="@+id/Fsource" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GOING TO"
        android:id="@+id/textView3"
        android:layout_below="@+id/Fsource"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <com.example.bunty.sharetheride.AutoComplete.CustomAutoCompleteTextView
        android:id="@+id/Fdestination"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:hint="Destination"
        android:singleLine="true"
        />

    <ImageButton

        android:layout_width="35dp"
        android:layout_height="35dp"

        android:background="#fff"
        android:id="@+id/FdestinationX"
        android:src="@drawable/x"
        android:layout_alignTop="@+id/Fdestination"
        android:layout_alignRight="@+id/Fdestination"
        android:layout_alignEnd="@+id/Fdestination" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@+id/Fdestination"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DATE"
        android:id="@+id/textView4" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:paddingTop="10dp"
        android:editable="false"
        android:id="@+id/Fdate"
        android:layout_below="@+id/textView4"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_edittext"
        android:text="SEARCH FOR RIDES"
        android:id="@+id/Fsearch"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="89dp" />



</RelativeLayout>
